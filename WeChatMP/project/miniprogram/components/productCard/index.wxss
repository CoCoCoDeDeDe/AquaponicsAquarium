.board{
  background-color: #fff;
  box-shadow: 1px 1px 8px 2px #0000000e;
  border-radius: 20px;

  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  align-items: center;
  gap: 10px;

  padding: 6px 10px;
}
