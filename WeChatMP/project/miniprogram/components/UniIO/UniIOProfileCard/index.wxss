
.Card1x1_Box{
  height: 180px;
  width: 180px;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  padding: 4px 4px 8px 4px;
}
.Card1x1_Box:active{
  top: 1px;
  transform: scale(0.98);
}
.Card1x1_Box_Selected{
  top: 0.7px;
  transform: scale(0.99);
}
.Card1x1_Board{
  position: relative;
  height: 100%;
  width: 100%;

  background-color: #fff;
  border-radius: 18px;
  box-shadow: 
    0 -2px 8px rgba(0, 0, 0, 0.144) inset,
    0 -2px 2px rgba(0, 0, 0, 0.082) inset,
    0 3px 8px rgba(0, 0, 0, 0.068),
    0 2px 1px rgba(0, 0, 0, 0.027);

  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
  padding: 10px;
  
  text-align: center;
  white-space: wrap;
}
.Card1x1_Board:active{

  background-color: #f6f6f6;
  box-shadow: 
    0 -2px 8px rgba(0, 0, 0, 0.144) inset,
    0 -2px 2px rgba(0, 0, 0, 0.082) inset,
    0 2px 4px rgba(0, 0, 0, 0.068),
    0 1px 0.1px rgba(0, 0, 0, 0.027);
}
.Card1x1_Board_Selected{

  background-color: #eeeeee;
  box-shadow: 
    0 -2px 8px rgba(0, 0, 0, 0.144) inset,
    0 -2px 2px rgba(0, 0, 0, 0.082) inset,
    0 2px 4px rgba(0, 0, 0, 0.068),
    0 1px 0.1px rgba(0, 0, 0, 0.027);
}
